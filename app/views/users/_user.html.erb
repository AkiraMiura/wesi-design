

<li>
  <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "管理者がアカウントを削除", user, method: :delete,
                                  data: { confirm: "管理者権限でユーザーを削除しますか?" } %>
    <% end %>
    
    <% if current_user?(user) && !current_user.admin? %>
    | <%= link_to "自分のアカウントを削除", user, method: :delete,
                                  data: { confirm: "自分のアカウントを削除しますか？" } %>
    <% end %>

</li>